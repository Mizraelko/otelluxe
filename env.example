# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SITE CONFIGURATION
# =============================================================================

# Main site URL (required)
NEXT_PUBLIC_SITE_URL=https://hotelluxbg.ru

# =============================================================================
# YANDEX MAPS
# =============================================================================

# Yandex Maps API Key (required for map functionality)
NEXT_PUBLIC_YANDEX_MAPS_API_KEY=your_yandex_maps_api_key_here

# =============================================================================
# CONTACT INFORMATION
# =============================================================================

# Hotel contact details (optional - defaults are set in config)
NEXT_PUBLIC_PHONE=+79877578323
NEXT_PUBLIC_EMAIL=luxgostevoidom@yandex.ru
NEXT_PUBLIC_VK_ID=412614778

# =============================================================================
# ANALYTICS
# =============================================================================

# Google Analytics ID (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Yandex Metrika ID (optional)
NEXT_PUBLIC_YANDEX_METRIKA_ID=your_yandex_metrika_id

# =============================================================================
# SEARCH ENGINE VERIFICATION
# =============================================================================

# Google Search Console verification (optional)
NEXT_PUBLIC_GOOGLE_VERIFICATION=your_google_verification_code

# Yandex Webmaster verification (optional)
NEXT_PUBLIC_YANDEX_VERIFICATION=your_yandex_verification_code

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Node environment
NODE_ENV=development
